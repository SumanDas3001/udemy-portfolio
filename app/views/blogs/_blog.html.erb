<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>

  <%= render partial: 'blogs/admin.action', locals: { blog: blog } %>

  <p>
  	<%= markdown(blog.body.truncate(200)) %>
    <%= link_to "Read More", blog_path(blog), class: "read-more-link" %>
  </p>
</div>
